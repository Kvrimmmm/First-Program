/*
Calculate Your Age App.
*/

#include <iostream>
using namespace std; 

int main () 
{   
	cout << "==========================\n";
	cout << "==Calculate Your Age App==\n";
	cout << "==========================\n";

	int age;
	cin >> age;
    
	int age_in_days = age * 365;
	int age_in_hours = age_in_days * 24;
	int age_in_minuts = age_in_hours * 60;
	int age_in_seconds = age_in_minuts * 60;


    
	cout << "Age In Days Is:" << age_in_days << "\n";
	cout << "Age In Hours Is:" << age_in_hours << "\n";
	cout << "Age In Minuts is:" << age_in_seconds << "\n";
	cout << "Age In Seconds Is:" << age_in_seconds << "\n";

  
	return 0;
}
